{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"],
      "@middleware/*": ["middleware/*"],
      "@agents/*": ["agents/*"],
      "@voice/*": ["voice/*"],
      "@apikeys/*": ["apikeys/*"],
      "@logs/*": ["logs/*"],
      "@metrics/*": ["metrics/*"],
      "@testsuites/*": ["testsuites/*"],
      "@phonenumbers/*": ["phonenumbers/*"],
      "@tools/*": ["tools/*"],
      "@integrations/*": ["integrations/*"],
      "@auth/*": ["auth/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
